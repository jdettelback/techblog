<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="">
    <h2>
      <a href="/post/{{id}}">{{title}}</a>
    </h2>
    <p>
     by {{user.name}}
    </p>
    <p>created at  {{updatedAt}}</p>
    <p class="post-body">
      {{body}}
    </p>
  </div>
</div>
{{/each}}
