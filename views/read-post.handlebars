<div>
  <div>
    <h2>{{title}} <span style="font-size: 25px">by: 
    {{user.name}}</span></h2>
    <p class="post-body">{{body}}</p>
  </div>
  <h3>Comments:</h3>

  {{#each comments as |comment|}}
    <p>
      <a href="/comment/{{post_id}}/{{id}}">{{body}}</a>
      by: {{user.name}}  at: {{updatedAt}}
    </p>
  {{/each}}
  {{#if logged_in}}

    <form class="form update-comment-form">
      <div class="form-group">
        <textarea
          class="form-input"
          id="comment-body"
          name="comment-desc"
        ></textarea>
      </div>
      <div class="form-group">
        <button
          id="saveCommentBtn"
          type="submit"
          class="btn btn-primary"
          data-id="{{id}}"
        >Save</button>
      </div>
    </form>
  {{/if}}
</div>

<script src="/js/readpost.js"></script>